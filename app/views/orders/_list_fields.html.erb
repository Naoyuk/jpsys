<tr class='nested-fields'>
  <%= f.hidden_field :order_id, :value => @order.id %>
  <td>
    <%= f.collection_select :item_id, f.object.selectable_items, :id, :name, {}, class: 'form-control custom-select' %>
  </td>
  <td>
    <%= f.text_field :amount, class: 'form-control' %>
  </td>
  <td>
    <%= f.text_field :discount, class: 'form-control' %>
  </td>
  <td>
    <%= link_to_remove_association 'x', f, class: 'btn btn-default' %>
  </td>
</tr>
