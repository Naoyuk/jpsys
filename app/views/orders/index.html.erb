<div class="row orderTableHeader">
  <div class="col-sm-3 add-button">
    <%= link_to "Add New Order", new_order_path, class: "btn btn-primary" %>
  </div>
  <div class="col-sm-3">
    <p>Sales<span>$<%= @total_sales %></span></p>
  </div>
  <div class="col-sm-3">
    <p>Purchase<span class="red">$<%= @total_purchase %></span></p>
  </div>
  <div class="col-sm-3">
    <p>Profit<span class="<%= 'red' if @profit < 0 %>">$<%= @profit %></span></p>
  </div>
</div>

<div class="row">
  <table class="table table-hover">
    <thead class="thead-dark">
      <th>Order Number</th>
      <th>Customer</th>
      <th>Order Date</th>
      <th>Payment Date</th>
      <th>Total</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.order_number, edit_order_path(order.id) %></td>
        <% begin %>
        <td><%= order.customer.name %></td>
        <% rescue %>
        <td></td>
        <% end %>
        <td><%= order.order_date %></td>
        <td><%= order.payment_date %></td>
        <td><%= order.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
